<Window x:Class="WpfÖvning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfÖvning"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TBox_WriteToFile" HorizontalAlignment="Left" Margin="72,164,0,0" TextWrapping="Wrap" Text="Skriv din text här...." VerticalAlignment="Top" Width="200"/>
        <Button x:Name="B_SendToFile" Content="Lägg till..." HorizontalAlignment="Left" Margin="72,202,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="B_SendToFile_Click"/>
        <Button x:Name="B_ReadFromFile" Content="Läs från filen..." HorizontalAlignment="Left" Margin="72,62,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="B_ReadFromFile_Click"/>
        <TextBlock x:Name="TBlock_ShowFromFile" HorizontalAlignment="Left" Margin="334,64,0,0" TextWrapping="Wrap" Text="Text från filen..." VerticalAlignment="Top" Width="326" Height="330"/>

    </Grid>
</Window>
